<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:gravity="clip_vertical"
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:id="@+id/judulUtama"
        android:text="Judul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_marginLeft="20dp"
        android:textColor="@color/black"
        app:layout_goneMarginTop="3dp"
        android:id="@+id/tanggalUtama"
        android:layout_marginTop="10dp"
        android:text="Tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/judulUtama"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:gravity="fill_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/black"
        app:layout_goneMarginTop="3dp"
        android:id="@+id/deskripsiUtama"
        android:layout_marginTop="10dp"
        android:text="deskripsi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanggalUtama"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <androidx.cardview.widget.CardView
        android:layout_marginTop="5dp"
        android:id="@+id/card"
        android:backgroundTint="@color/white"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        android:layout_width="358dp"
        android:layout_height="190dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">


        <ImageView
            android:id="@+id/imageUtama"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>